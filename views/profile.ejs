<%- include('includes/head.ejs') -%>
<link rel="stylesheet" href="/css/form.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" >

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <div class="form-align">
            <h2 style="text-align: center;">User Profile</h2>
            <div class="login-form">
                <% if(errorMessage) { %>
                    <div class="alert alert-success" role="alert">
                        <%= errorMessage %>
                    </div>
                <% } %>
                <form action="/profile" method="post" enctype="multipart/form-data">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Your Name.." value="<%= user.name %>">

                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Your Email.." value="<%= user.email %>">
              
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="********">
                
                    <label for="phone">Phone</label>
                    <input type="text" id="phone" name="phone" placeholder="Your Phone.." value="<%= user.phone %>">

                    <label for="image">Profile Image</label>
                    <input type="file" name="image" id="image" />
                    <% if(user.image) { %>
                        <img src="<%= user.image %>" height="100" width="100" />
                    <% } %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="submit" value="Submit">
                </form>
            </div>
        </div>
    </main>

<%- include('includes/footer.ejs') %>